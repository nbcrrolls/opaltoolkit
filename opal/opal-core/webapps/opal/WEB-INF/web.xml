<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web
Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>Opal Toolkit</display-name>
    
    <listener>
        <listener-class>org.apache.axis.transport.http.AxisHTTPSessionListener</listener-class>
    </listener>
   

  <!-- Dashboard configuaration parameters...  -->
    <servlet>
        <servlet-name>dashboard</servlet-name>
        <servlet-class>edu.sdsc.nbcr.opal.dashboard.servlet.OpalInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
       <servlet-name>dashboard</servlet-name>
       <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>plotchart</servlet-name>
        <servlet-class>edu.sdsc.nbcr.opal.dashboard.servlet.PloterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
       <servlet-name>plotchart</servlet-name>
       <url-pattern>/plotchart</url-pattern>
    </servlet-mapping>

    <context-param>
       <param-name>OPAL_VERSION</param-name>
       <param-value>1.9</param-value>
    </context-param>
    <!-- the next two paramters are to get os version and loadaverage... leave it empty if you don't have any command-->
    <context-param>
       <param-name>OPAL_BUILDDATE_COMMAND</param-name>
       <param-value>uname -a</param-value>
    </context-param>
    <context-param>
       <param-name>OPAL_UPTIME_COMMAND</param-name>
       <param-value>uptime</param-value>
    </context-param>
    <context-param>
       <param-name>OPAL_WEB_SITE</param-name>
       <param-value>http://opaltoolkit.sourceforge.net/</param-value>
    </context-param>
    <context-param>
       <param-name>OPAL_DOC</param-name>
       <param-value>http://opaltoolkit.sourceforge.net/docs/</param-value>
    </context-param>
  <!-- Dashboard configuaration parameters...  -->


 
  <!-- Axis configuaration parameters... do not touch this part!! -->
  <servlet>
    <servlet-name>AxisServlet</servlet-name>
    <display-name>Apache-Axis Servlet</display-name>
    <servlet-class>
        org.apache.axis.transport.http.AxisServlet
    </servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AdminServlet</servlet-name>
    <display-name>Axis Admin Servlet</display-name>
    <servlet-class>
        org.apache.axis.transport.http.AdminServlet
    </servlet-class>
    <load-on-startup>100</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>SOAPMonitorService</servlet-name>
    <display-name>SOAPMonitorService</display-name>
    <servlet-class>
        org.apache.axis.monitor.SOAPMonitorService
    </servlet-class>
    <init-param>
      <param-name>SOAPMonitorPort</param-name>
      <param-value>5001</param-value>
    </init-param>
    <load-on-startup>100</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>AxisServlet</servlet-name>
    <url-pattern>/servlet/AxisServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AxisServlet</servlet-name>
    <url-pattern>*.jws</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AxisServlet</servlet-name>
    <url-pattern>/services/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SOAPMonitorService</servlet-name>
    <url-pattern>/SOAPMonitor</url-pattern>
  </servlet-mapping>

    <!-- currently the W3C havent settled on a media type for WSDL;
    http://www.w3.org/TR/2003/WD-wsdl12-20030303/#ietf-draft
    for now we go with the basic 'it's XML' response -->
  <mime-mapping>
    <extension>wsdl</extension>
     <mime-type>text/xml</mime-type>
  </mime-mapping>

  <mime-mapping>
    <extension>xsd</extension>
    <mime-type>text/xml</mime-type>
  </mime-mapping>
  <!-- End Axis configuaration parameters...  -->


  <!-- general configuration parameters  -->
  <welcome-file-list id="WelcomeFileList">
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jws</welcome-file>
  </welcome-file-list>

  <session-config>
      <!-- Default to 5 minute session timeouts -->
      <session-timeout>5</session-timeout>
  </session-config>


</web-app>
